# Runtime Environment Configuration for Docker
# Copy this file to .env and adjust values as needed
# These variables are injected at container runtime, not build time

# Default Nostr relays (comma-separated list of WebSocket URLs)
RUNTIME_RELAYS=wss://relay.divine.video,wss://relay.damus.io,wss://nos.lol

# Default Blossom servers (comma-separated list of HTTPS URLs)
RUNTIME_BLOSSOM_SERVERS=https://almond.slidestr.net

# Application title shown in the browser
RUNTIME_APP_TITLE=Nostube

# Enable debug mode (true/false)
RUNTIME_DEBUG=false

# Custom configuration as JSON string (optional)
# RUNTIME_CUSTOM_CONFIG={"feature_flags":{"experimental":false}}
